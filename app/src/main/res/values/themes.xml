<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme -->
    <style name="Theme.AirLibrary" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Warna Primer -->
        <item name="colorPrimary">@color/light_blue_center</item>
        <item name="colorPrimaryVariant">@color/light_blue_end</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Warna Sekunder -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/light_blue_start</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Warna Latar -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:statusBarColor">@color/light_blue_start</item>

        <!-- Warna Teks -->
        <item name="android:textColorPrimary">@color/text_primary</item>

        <!-- Gaya Komponen -->
        <item name="materialButtonStyle">@style/Widget.AirLibrary.Button</item>
        <item name="textInputStyle">@style/Widget.AirLibrary.TextInputLayout</item>
    </style>

    <!-- Gaya Tombol Kustom -->
    <style name="Widget.AirLibrary.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Gaya TextInputLayout Kustom -->
    <style name="Widget.AirLibrary.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/card_corner_radius</item>
    </style>

    <!-- Tema Gelap (Opsional) -->
    <style name="Theme.AirLibrary.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/light_blue_end</item>
        <item name="colorPrimaryVariant">@color/light_blue_center</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>